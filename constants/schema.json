{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Job Openings Schema",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "OpeningId": {
                "type": "string",
                "format": "uuid",
                "coerce": true
            },
            "recruiterId": {
                "type": "string"
            },
            "companyName": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "companyLogo": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "jobTitle": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "location": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "salary": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "postedDate": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "employmentType": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string",
                        "enum": [
                            "Full-time",
                            "Part-time",
                            "Contract",
                            "Internship",
                            "Freelance",
                            ""
                        ]
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "applicantAddresses": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            },
            "description": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "string"
                    }
                },
                "required": [
                    "$share"
                ]
            },
            "requirements": {
                "type": "array",
                "items": {
                    "type": "object",
                    "properties": {
                        "$share": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "$share"
                    ]
                }
            },
            "isAccepting": {
                "type": "object",
                "properties": {
                    "$share": {
                        "type": "boolean"
                    }
                },
                "required": [
                    "$share"
                ]
            }
        },
        "required": [
            "OpeningId",
            "recruiterId",
            "companyName",
            "jobTitle",
            "location",
            "salary",
            "postedDate",
            "employmentType",
            "description",
            "requirements",
            "isAccepting"
        ]
    }
}